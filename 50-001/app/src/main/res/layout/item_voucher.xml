<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/voucher_card"
    android:layout_width="180dp"
    android:layout_height="200dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="#33000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E040FB">

        <!-- Colored Top Section -->
        <LinearLayout
            android:id="@+id/voucher_colored_section"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/voucher_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10% discount"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/voucher_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="voucher"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- White Bottom Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:gravity="center">

            <TextView
                android:id="@+id/voucher_points_required"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1000 Points"
                android:textColor="#673AB7"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>